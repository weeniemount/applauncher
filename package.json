{
  "name": "app-launcher",
  "version": "0.2.1",
  "description": "Chrome 48's App Launcher recreation in Electron for Windows and Linux.",
  "main": "src/main.js",
  "author": {
    "name": "weenie",
    "email": "bonkicool@protonmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "jszip": "^3.10.1",
    "png-to-ico": "^2.1.8"
  },
  "devDependencies": {
    "electron": "^13.6.9",
    "electron-builder": "^25.1.8"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.weenie.applauncher",
    "productName": "App Launcher",
    "executableName": "app-launcher",
    "compression": "maximum",
    "asar": true,
    "icon": "src/icons/applauncher.ico",
    "afterPack": "./scripts/removeUnneededFiles.js",
    "files": [
      "**/*",
      "!**/*.map"
    ],
    "win": {
      "icon": "src/icons/applauncher.ico",
      "executableName": "app-launcher"
    },
    "mac": {
      "icon": "src/icons/mac.icns"
    },
    "linux": {
      "electronLanguages": ["en-US"],
      "executableName": "app-launcher",
      "icon": "src/icons/linux",
      "target": [
        "deb",
        "AppImage",
        "rpm"
      ],
      "extraFiles": [
        {
          "from": "src/linux/com.weenie.applauncher.appdata.xml",
          "to": "usr/share/metainfo/com.weenie.applauncher.appdata.xml"
        }
      ],
      "category": "Utility"
    },
    "rpm": {
      "fpm": [
        "--iteration=1.0.0"
      ],
      "depends": [
        "gtk3",
        "libnotify",
        "nss",
        "libXScrnSaver",
        "libXtst",
        "xdg-utils",
        "at-spi2-core",
        "libuuid"
      ]
    }
  }
}
